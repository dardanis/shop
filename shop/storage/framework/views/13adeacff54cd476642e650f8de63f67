<?php $__env->startSection('scripts'); ?>
<script type="text/javascript">
$(function(){
  $('#list-button').click(function(){
    $('.prod-box').animate({opacity:0},function(){
      $('#grid-button').removeClass('button-active');
      $('#list-button').addClass('button-active');
      $('#grid').css('display','none');
      $('#list').css('display','block');
      $('.prod-box-list').stop().animate({opacity:1});
    });
  });

  $('#grid-button').click(function(){
    $('#grid').css('display','block');
    $('.prod-box-list').animate({opacity:0},function(){
      $('#list-button').removeClass('button-active');
      $('#grid-button').addClass('button-active');
      $('#list').css('display','none');
      $('.prod-box').stop().animate({opacity:1});
    });
  });
});
</script>
<script type="text/javascript">
  $(function(){
      $('#filter-form').change(function(){
        var sort=$('#filter-form').val();
        var viewtype=$('#viewtype').val();
        var sale='';
        if(sort=='asc' || sort=='desc'){
          $('#'+viewtype).load('shop?sort='+sort +' #'+viewtype);
        }else if(sort=='low' || sort=='high'){
          if(sort=='low'){
            sale='asc';
          }else if(sort=='high'){
            sale='desc';
          }
          $('#'+viewtype).load('shop?sale='+sale +' #'+viewtype);
        }
        
      });
      $('#filter-perpage').change(function(){
        var perpage=$('#filter-perpage').val();
          $('#'+viewtype).load('shop?perpage='+perpage +' #'+viewtype);
      });
    });
    
</script>
<?php $__env->stopSection(); ?>
