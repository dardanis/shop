					<th align="left">Description</th>
					<th align="right">Date</th>
					<th align="right">Amount</th>
				</tr>

				<!-- Display The Invoice Items -->
				<?php foreach($invoice->invoiceItems() as $item): ?>
					<tr>
						<td colspan="2"><?php echo e($item->description); ?></td>
						<td><?php echo e($item->dollars()); ?></td>
					</tr>
				<?php endforeach; ?>

				<!-- Display The Subscriptions -->
				<?php foreach($invoice->subscriptions() as $subscription): ?>
					<tr>
						<td>Subscription (<?php echo e($subscription->quantity); ?>)</td>
						<td><?php echo e($subscription->startDateString()); ?> - <?php echo e($subscription->endDateString()); ?></td>
						<td><?php echo e($subscription->dollars()); ?></td>
					</tr>
				<?php endforeach; ?>

				<!-- Display The Discount -->
				<?php if($invoice->hasDiscount()): ?>
					<tr>
						<?php if($invoice->discountIsPercentage()): ?>
							<td><?php echo e($invoice->coupon()); ?> (<?php echo e($invoice->percentOff()); ?>% Off)</td>
						<?php else: ?>
							<td><?php echo e($invoice->coupon()); ?> ($<?php echo e($invoice->amountOff()); ?> Off)</td>
						<?php endif; ?>
						<td>&nbsp;</td>
						<td>-$<?php echo e($invoice->discount()); ?></td>
					</tr>
				<?php endif; ?>

				<!-- Existing Balance -->
				<?php if(isset($invoice->starting_balance)): ?>
					<tr>
						<td>Starting Balance</td>
						<td>&nbsp;</td>
						<td><?php echo e($invoice->startingBalanceWithCurrency()); ?></td>
					</tr>
				<?php endif; ?>

				<!-- Display The Final Total -->
				<tr style="border-top:2px solid #000;">
					<td>&nbsp;</td>
					<td style="text-align: right;"><strong>Total</strong></td>
