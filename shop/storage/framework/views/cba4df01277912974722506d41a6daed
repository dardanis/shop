<?php $__env->startSection('scripts'); ?>
	<script type="text/javascript">
		var limit = 3;
		$('input.single-checkbox').on('change', function(evt) {
		   if($(this).siblings(':checked').length >= limit) {
		       this.checked = false;
		   }
		   console.log(limit);
		});
	</script>
