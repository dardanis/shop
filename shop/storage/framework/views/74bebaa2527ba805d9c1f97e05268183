<?php $__env->startSection('scripts'); ?>
	
	<script src="<?php echo e(asset('/js/map2.js')); ?>"></script>
	<script src="<?php echo e(asset('/js/dropzone/dropzone.js')); ?>"></script>
	<script language="javascript">
// myDropzone is the configuration for the element that has an id attribute
  // with the value my-dropzone (or myDropzone)
  Dropzone.options.myDropzone = {
    init: function() {
      this.on("addedfile", function(file) {
        var removeButton = Dropzone.createElement('<a class="dz-remove">Remove file</a>');
        var _this = this;
        removeButton.addEventListener("click", function(e) {
          e.preventDefault();
          e.stopPropagation();
           var fileInfo = new Array();
           fileInfo['name']=file.name;
           var token=$('#token').val();
           $.ajax({
                type: "POST",
                url: "<?php echo e(url('/delete23')); ?>",
                data: {'_token':token,'file': file.name},
                beforeSend: function () {
                    // before send
                },
                success: function (response) {
               
                       
                },
                error: function () {
                    alert("error");
                }
            });
          _this.removeFile(file);

        });
        file.previewElement.appendChild(removeButton);
      });
    }
  };
</script>
