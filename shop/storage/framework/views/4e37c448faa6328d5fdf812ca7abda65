<script>




    $(document).on('change', '#first', function () {
        var first = $(this).find(':selected').val();
        var token = $('#token').val();
        $.ajax({
            url: "/ajax",
            type: "POST",
            data: {'_token': token, 'first': first},
            success: function (data) {
                var html = '';
                $.each(data, function (id, name) {
                    html += '<option value="' + id + '">' + name + '</option>';
                });
                $('#second').html(html);
            }, error: function () {
                alert("error!!!!");
            }
        });
    });


    $(document).ready(function(){

        $("#second").on("change",function(){
            var val=$(this).val();
            console.log(val);

            if(val==0){

            }
            else{

                $.ajax({
                    url: "<?php echo e(url('ajaxfindproduct')); ?>",
                    type: "get",
                    data: {subcategoryid:$(this).val()},
                    dataType: "json",
                    success: function(data)
                    {
                        // alert( data["data"][0]["id"] );
                        $.each(data,function(index,val)
                        {
                            $('#ajax_here').append("<a href='#' id='"+val.id+"' class='ajax-product'><div class='stickit col-lg-12' id='"+val.id+"'><div class='description' style='word-break: break-all'>"+val.description+"</div></div></a>");

                        })
                        $('.ajax-product').on('click',function()
                        {
                            $.ajax({
                                url: "<?php echo e(url('getproductajax')); ?>",
                                type: "get",
                                contentType:'multipart/form-data',
                                data: {prodid: $(this).prop('id')},
                                dataType: "json",
                                success: function (data) {

                                    $.each(data,function(index,val)
                                    {
                                        var input="";
                                        $('#title').val(val.title);

                                        var formData = new FormData();
                                        formData.append('file', $('#imgfile')[0].files["http://localhost:5555/img/products/1456680377.jpg"]);


                                        //$('body#tinymce').text(val.description);
                                        tinyMCE.activeEditor.setContent(val.description);
                                        $('#price').val(val.price);

                                    })
                                }
                            })

                        })
                    }
                })
            }

        })



    })



</script>


