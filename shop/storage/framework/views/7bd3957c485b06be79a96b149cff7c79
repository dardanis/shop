<?php $__env->startSection('scripts'); ?>
	<script type="text/javascript">
		if ($('select[name="types"]').val()==2) {
                $('#position').show();
                $('#image').show();
            }
            $('select[name="types"]').change(function(){
                if($(this).val()==2){
                    $('#position').show();
                    $('#image').show();
                }else{
                    $('#position').hide();
                    $('#image').hide();
                }
            });

		if ($('select[name="types"]').val()==1) {
                $('#product').show();
            }
            $('select[name="types"]').change(function(){
                if($(this).val()==1){
                    $('#product').show();

                }else{
                    $('#product').hide();
                }
        });
	</script>
<?php $__env->stopSection(); ?>
