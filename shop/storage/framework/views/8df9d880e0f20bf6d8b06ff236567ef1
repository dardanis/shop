<?php $__env->startSection('content'); ?>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <?php echo e(trans('shop.products')); ?>

            </header>
            <div class="panel-body">
            <?php echo $__env->make('errors_messages', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
                  <div class="adv-table">
                      <table  class="display table table-bordered table-striped" id="productadmin">
                        <thead>
                        <tr>
                            <th><?php echo e(trans('app.product_title')); ?></th>
                            <th><?php echo e(trans('shop.price')); ?></th>
                            <th><?php echo e(trans('shop.category')); ?></th>
                            <th><?php echo e(trans('shop.user')); ?></th>
                            <th><?php echo e(trans('shop.created_at')); ?></th>
                            <th><?php echo e(trans('shop.approve')); ?></th>
                            <th><?php echo e(trans('shop.edit')); ?></th>
                            <th><?php echo e(trans('shop.delete')); ?></th>
                            <th><?php echo e(Lang::get('app.View')); ?></th>
                        </tr>
                        </thead>
                        <tbody>
                        <?php foreach($products as $product): ?>
                       <tr>
                        <td ><?php echo e($product->title); ?></td>
                        <td ><?php echo e($product->price); ?></td>
                        <td ><label class="label label-default"><?php echo e($product->category->name); ?></label></td>
                        <td ><label class="label label-default"><?php echo e($product->user->name); ?></label></td>
                        <td><span class="label label-info"><?php echo e(Carbon::createFromTimestamp(strtotime($product->created_at))->diffForHumans()); ?></span></td>
                        <td>
                          <?php if($product->status != 0): ?>
                            <?php echo Form::open(array('method' => 'PATCH', 'route' => array('admin_product_spam', $product->id))); ?>

                            <?php echo Form::submit(trans('shop.warn_user'), array('class' => 'btn btn-warning btn-xs')); ?>

                            <?php echo Form::close(); ?>

                          <?php else: ?>
                            <?php echo Form::open(array('method' => 'PATCH', 'route' => array('admin_product_approve', $product->id))); ?>

                            <?php echo Form::submit(trans('shop.approve'), array('class' => 'btn btn-success btn-xs')); ?>

                            <?php echo Form::close(); ?>

                          <?php endif; ?>
                        </td>

                            <td><a href="<?php echo e("/edit/$product->slug/$product->id"); ?>" class="btn btn-warning btn-xs">Edit</a></td>
                        <td>
                            <?php echo Form::open(array('method' => 'DELETE', 'route' => array('admin_product_delete', $product->id))); ?>

                            <?php echo Form::submit(trans('shop.delete'), array('class' => 'btn btn-danger btn-xs')); ?>

                            <?php echo Form::close(); ?>

                          </td>
                           <td><a href="<?php echo e(URL::route('product_show',array($product->slug,$product->id))); ?>" class="btn btn-default btn-xs" target="_blank">View</a></td>
                        </tr>
                        <?php endforeach; ?>
                        </tbody>
                      </table>
                  </div>
            </div>
        </section>

    </div>
</div>
